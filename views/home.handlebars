    <!-- .section -->
    <section class='section'>
        <div class=' container'>
            <div class='columns is-centered'>
                <div class='column is-half center'>
                    <!-- FORM HERE -->
                    <input id='searchBar' class='input is-rounded' type='text' placeholder='Search Books'>
                    <input class='button is-primary is-light' type='submit' value='Submit' id='searchBtn'></button>
                </div>

            </div>
            <br>
            <br>
            <div class="columns">
                <div class="column" id="bookDiv">
                </div>
            </div>
            <div class='container'>
                <div class='columns'>
                    <div class='column'>
                        <div class='notification is-primary'>
                            <h1 class='title is-size-4 center'>
                                <a href='#'>BOOKS I WANT TO READ</a> </h1>
                            <br>
                            <ol>
                                {{#each Books}}
                                {{!-- {{#ifEquals book_shelf "Unread"}} --}}
                                <p data-id={{book_id}}> {{book_title}} </pdata-id={{book_id}}>
                                {{!-- {{/ifEquals}} --}}
                                {{/each}}
                            </ol>
                        </div>
                    </div>
                    <div class='column'>
                        <div class='notification is-primary'>
                            <h1 class='title is-size-4 center'>
                                <a href='#'>BOOKS I'VE READ</a>
                            </h1>
                            <br>
                            <ol>
                                {{#each Books}}
                                {{!-- {{#ifEquals book_shelf "Read"}} --}}
                                <p data-id={{book_id}}> {{book_title}} </p>
                                {{!-- {{/ifEquals}} --}}
                                {{/each}}
                            </ol>
                        </div>
                    </div>
                    <div class='column'>
                        <div class='notification is-primary'>
                            <h1 class='title is-size-4 center'>
                                <a href='#'>BOOKS I'M CURRENTLY READING</a>
                            </h1>
                            <br>
                            <ol>
                                {{#each Books}}
                                {{!-- {{#ifEquals book_shelf "Current"}} --}}
                                <p data-id={{book_id}}> {{book_title}} </p>
                                {{!-- {{/ifEquals}} --}}
                                {{/each}}
                            </ol>

                        </div>
                    </div>
                </div>
            </div>
    </section>
    <!-- /.section -->